  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/tortilla.git"
  },
  "bin": {
    "tortilla": "./dist/cli/tortilla.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "postbuild": "copyfiles -u 1 \"src/**/*.{json,tmpl,txt}\" dist/",
    "prepublishOnly": "yarn build",
    "build": "node scripts/build.js",
    "lint": "tslint --format stylish -c tslint.json 'src/**/*.ts'",
    "pretest": "yarn build",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/fs-extra": "5.0.4",
    "@types/handlebars": "4.0.39",
    "@types/i18next": "8.4.4",
    "@types/inquirer": "0.0.42",
    "@types/minimist": "1.2.0",
    "@types/node": "9.6.26",
    "@types/semver": "5.5.0",
    "@types/tmp": "0.0.33",
    "commander": "2.16.0",
    "fs-extra": "7.0.0",
    "handlebars": "4.0.11",
    "i18next": "11.5.0",
    "inquirer": "6.0.0",
    "minimist": "1.2.0",
    "node-localstorage": "1.3.1",
    "parse-diff": "0.4.2",
    "readline-sync": "1.4.9",
    "semver": "5.5.0",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "babel-register": "6.26.0",
    "copyfiles": "2.0.0",
    "escape-string-regexp": "1.0.5",
    "husky": "0.14.3",
    "jest": "23.4.2",
    "lint-staged": "7.2.0",
    "prettier": "1.14.0",
    "rimraf": "2.6.2",
    "ts-jest": "23.0.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "typescript": "2.9.2"
  },
  "engines": {
    "node": ">=0.10",
    "git": ">=1.7.4.2 || ^2.17.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 200,
    "singleQuote": true
  }
}
